%h2 アカウント情報の編集

= form_with model: resource, as: resource_name, url: registration_path(resource_name), local: true, html: { method: :put } do |f|
  - if resource.errors.any?
    #error_explanation
      %h2= "#{resource.errors.count} 件のエラーがあります。"
      %ul
        - resource.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :username
    = f.text_field :username, autocomplete: "username", class: "form-control"

  .field
    = f.label :email
    = f.email_field :email, autocomplete: "email", class: "form-control"

  .field
    = f.label :password
    = f.password_field :password, autocomplete: "new-password", class: "form-control"

  .field
    = f.label :password_confirmation
    = f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control"

  .field
    = f.label :current_password
    = f.password_field :current_password, autocomplete: "current-password", class: "form-control"

  .actions
    = f.submit "更新", class: "btn btn-primary"

= link_to "アカウント削除", registration_path(resource_name), data: { confirm: "本当に削除しますか？" }, method: :delete, class: "btn btn-danger"
= render "devise/shared/links"
