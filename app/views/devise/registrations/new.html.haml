%h2 サインアップ

= form_with model: resource, as: resource_name, url: registration_path(resource_name), local: true do |f|
  - if resource.errors.any?
    #error_explanation
      %h2= "#{resource.errors.count} 件のエラーがあります。"
      %ul
        - resource.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :username
    = f.text_field :username, autofocus: true, autocomplete: "username", class: "form-control"

  .field
    = f.label :email
    = f.email_field :email, autocomplete: "email", class: "form-control"

  .field
    = f.label :password
    = f.password_field :password, autocomplete: "new-password", class: "form-control"

  .field
    = f.label :password_confirmation
    = f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control"

  .actions
    = f.submit "サインアップ", class: "btn btn-primary"

= render "devise/shared/links"
